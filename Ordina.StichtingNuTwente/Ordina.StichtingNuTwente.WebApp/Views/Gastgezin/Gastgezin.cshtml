                        <div class="col">
                            <input type="number" class="form-control" name="MaxChildren" value="@Model.GastGezin.MaxChildren" @(canEdit?"":"disabled")>
                        </div>
                    </div>
                    if (canEdit)
                    {
                        <input type="submit" class="btn btn-primary mt-3" value=Opslaan>
                    }
                }
            </div>
        </div>
    </div>
