                <div class="col-6"><p><b>Vluchteling ophalen:</b> @Model.PlaatsingsInfo.VluchtelingOphalen</p> </div>
                <div class="col-6"><p><b>Volwassenen en grotere kinderen:</b> @Model.PlaatsingsInfo.VolwassenenGrotereKinderen</p> </div>
                <div class="col-6"><p><b>Zelf koken:</b> @Model.PlaatsingsInfo.ZelfKoken</p> </div>
                <div class="col-6"></div>
                <div class="col-12"><p><b>Notities:</b> <br/> @Model.Notities</p> </div>
            </div>
        </td>
    </tr>
}