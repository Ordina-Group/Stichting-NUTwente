@using Ordina.StichtingNuTwente.Models.ViewModels
@model GastgezinPlaatsingsInfoPartial

@if (Model.PlaatsingsInfo != null)
{
    <tr class="hide hidden @(Model.Index%2==0?"dark-row":"")" id="@Model.Index">
        <td colspan="10">
            <div class="row" style="margin:0px;padding:0px;">
                <div class="col-6"><p><b>Alchohol&drugs:</b> @Model.PlaatsingsInfo.AlchoholEnDrugs</p></div>
                <div class="col-6"><p><b>Allergien:</b> @Model.PlaatsingsInfo.Allergieen</p> </div>
                <div class="col-6"><p><b>Basisscholen:</b> @Model.PlaatsingsInfo.BasisscholenAanwezig</p> </div>
                <div class="col-6"><p><b>Belemmeringen:</b> @Model.PlaatsingsInfo.Belemmering</p> </div>
                <div class="col-6"><p><b>Beperkingen:</b> @Model.PlaatsingsInfo.Beperkingen</p> </div>
                <div class="col-6"><p><b>Daglicht slaapkamer:</b> @Model.PlaatsingsInfo.DaglichtSlaapkamer</p> </div>
                <div class="col-6"><p><b>Faciliteiten:</b> @Model.PlaatsingsInfo.Faciliteiten</p> </div>
                <div class="col-6"><p><b>Faciliteiten kinderen:</b> @Model.PlaatsingsInfo.FaciliteitenVoorKinderen</p> </div>
                <div class="col-6"><p><b>Huisderen aanwezig:</b> @Model.PlaatsingsInfo.HuisdierenAanwezig</p> </div>
                <div class="col-6"><p><b>Huisderen mogelijk:</b> @Model.PlaatsingsInfo.HuisdierenMogelijk</p> </div>
                <div class="col-6"><p><b>Kinderen in de buurt:</b> @Model.PlaatsingsInfo.KinderenInDeBuurt</p> </div>
                <div class="col-6"><p><b>Kleine kinderen:</b> @Model.PlaatsingsInfo.KleineKinderen</p> </div>
                <div class="col-6"><p><b>Koelkast:</b> @Model.PlaatsingsInfo.KoelkastRuimte</p> </div>
                <div class="col-6"><p><b>Opbergruimte:</b> @Model.PlaatsingsInfo.Opbergruimte</p> </div>
                <div class="col-6"><p><b>Privacy:</b> @Model.PlaatsingsInfo.Privacy</p> </div>
                <div class="col-6"><p><b>Roken:</b> @Model.PlaatsingsInfo.Roken</p> </div>
