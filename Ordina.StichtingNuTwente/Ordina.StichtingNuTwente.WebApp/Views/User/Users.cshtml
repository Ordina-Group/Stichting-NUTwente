@using Ordina.StichtingNuTwente.Models.ViewModels
@model List<UserViewModel>
@{
    ViewData["Title"] = "Overzicht Vrijwilligers";
}
<body>
    <h3>@ViewData["Title"]</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Voornaam</th>
                <th scope="col">Achternaam</th>
                <th scope="col">E-mailadres</th>
                <th scope="col">Telefoonnummer</th>
                <th scope="col">Rollen</th>
                <th scope="col">In vrijwilliger lijst?</th>
                <th scope="col">Aantal gastgezinnen</th>
                <th scope="col">Aantal buddies</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <th scope="row">@u.FirstName</th>
                    <td>@u.LastName</td>
                    <td>@u.Email</td>
                    <td>@u.PhoneNumber</td>
                    <td>@string.Join( "; ", @u.Roles.ToArray() )</td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input dropdown-checkbox" type="checkbox" value="" id="@u.Id" @(u.InDropdown?"checked":"")>
                        </div>
                    </td>
                    <td><a href="/MijnGastgezinnen/@u.Id?filter=Intaker">@u.AantalIntakes</a></td>
                    <td><a href="/MijnGastgezinnen/@u.Id?filter=Buddy">@u.AantalBuddies</a></td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        $(".dropdown-checkbox").on("change", function(){
            let checkbox = $(this);
            let id = checkbox.attr("id");
            let checked = checkbox.is(":checked");
            checkbox.prop( "disabled", true );
            $.ajax({
            url: "/User/UserUpdate",
               type: "PUT",
               dataType: 'text',
               contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
               data: {"inDropdown":checked, "id":id},
               success: function() {
                   checkbox.prop( "disabled", false);
               },
               error: function() {
                   checkbox.prop( "disabled", false);
                   checkbox.prop( "checked", !checked);
               }
            });
        })
    </script>
</body>