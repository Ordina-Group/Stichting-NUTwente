@using Ordina.StichtingNuTwente.Models.Models
@using Microsoft.AspNetCore
@model Login
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h2>Login</h2>
                <form method="post">
                    <div class="form-group">
                        <label name="username"> Gebruikersnaam</label>
                        <input type="username" class="form-control" name="username" value="@(Model?.Username)">
                    </div>
                    <div class="form-group">
                        <label name="password"> Wachtwoord</label>
                        <input type="password" class="form-control" name="password" value="@(Model?.Password)">
                    </div>
                    <button type="submit" class="btn btn-primary">Log-In</button>
                </form>
            </div>
        </div>
    </div>
</div>